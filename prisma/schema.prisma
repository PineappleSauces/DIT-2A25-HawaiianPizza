generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// prisma category model for the category filter, ai assisted
model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  slug      String    @unique
  type      String?
  carParts  carParts[]
  cars      cars[]
}


model carParts {
  id            Int     @id @default(autoincrement())
  categoryId    Int
  category      Category @relation(fields: [categoryId], references: [id])
  name          String
  type          String
  price_display String
  description   String
  partId        String?
}

model cars {
  id            Int          @id @default(autoincrement())
  categoryId    Int
  category      Category @relation(fields: [categoryId], references: [id])
  name          String
  type          String
  power         String
  price_display String
  description   String
  carsid        String
  comparison    comparison[]
}

model comparison {
  id         Int    @id @default(autoincrement())
  session_id String
  carId      Int
  cars       cars   @relation(fields: [carId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_car")
}
